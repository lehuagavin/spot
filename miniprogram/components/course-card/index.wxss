/* 课程卡片组件样式 */
.course-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.course-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 图片区域 */
.card-image {
  position: relative;
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.card-image .image {
  width: 100%;
  height: 100%;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  color: #ffffff;
}

.status-tag.tag-primary {
  background-color: #0071e3;
}

.status-tag.tag-success {
  background-color: #34c759;
}

.status-tag.tag-secondary {
  background-color: rgba(0, 0, 0, 0.5);
}

/* 内容区域 */
.card-content {
  padding: 24rpx;
}

/* 标题行 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.age-tag {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  color: #0071e3;
  background-color: rgba(0, 113, 227, 0.1);
  border-radius: 6rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 位置和时间 */
.location-row,
.time-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.location-text,
.time-text {
  font-size: 26rpx;
  color: #6e6e73;
  flex: 1;
}

/* 底部 */
.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.enroll-info {
  display: flex;
  flex-direction: column;
}

.enroll-text {
  font-size: 24rpx;
  color: #86868b;
}

.enroll-count {
  font-size: 28rpx;
  color: #0071e3;
  font-weight: 500;
  margin-top: 4rpx;
}

/* 拼班按钮 */
.join-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  background-color: #0071e3;
  border-radius: 32rpx;
  border: none;
  line-height: 1;
}

.join-btn::after {
  border: none;
}

.join-btn:active {
  background-color: #0077ed;
}
