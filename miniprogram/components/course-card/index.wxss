/* 课程卡片组件样式 - 网格布局版本 */
.course-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.course-card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

/* 图片区域 */
.card-image {
  position: relative;
  width: 100%;
  height: 220rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
}

.card-image .image {
  width: 100%;
  height: 100%;
}

/* 内容区域 */
.card-content {
  padding: 20rpx;
}

/* 课程名称 */
.course-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  line-height: 1.4;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.icon {
  font-size: 22rpx;
  margin-right: 6rpx;
  flex-shrink: 0;
}

.info-text {
  font-size: 22rpx;
  color: #6e6e73;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 成班信息 */
.enroll-row {
  margin-top: 8rpx;
  margin-bottom: 12rpx;
}

.enroll-label {
  font-size: 22rpx;
  color: #86868b;
}

/* 底部区域 */
.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 进度区域 */
.progress-section {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

/* 头像组 */
.avatar-group {
  display: flex;
  margin-right: 8rpx;
}

.avatar-item {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #ffffff;
  margin-right: -12rpx;
  background-color: #f5f5f7;
}

.avatar-item:last-child {
  margin-right: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

/* 报名人数 */
.enroll-count {
  font-size: 22rpx;
  color: #0071e3;
  font-weight: 500;
}

/* 拼班按钮 */
.join-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
  background: linear-gradient(135deg, #7ed56f 0%, #28b485 100%);
  border-radius: 24rpx;
  border: none;
  line-height: 1;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.join-btn::after {
  border: none;
}

.join-btn:active {
  opacity: 0.9;
}
