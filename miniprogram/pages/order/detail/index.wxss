/* 订单详情页面样式 */
.page-container { min-height: 100vh; background-color: #f5f5f7; padding-bottom: 40rpx; }
.loading-state { display: flex; justify-content: center; padding: 200rpx; }
.loading-spinner { width: 60rpx; height: 60rpx; border: 4rpx solid #e8e8ed; border-top-color: #0071e3; border-radius: 50%; animation: spin 0.8s linear infinite; }
@keyframes spin { to { transform: rotate(360deg); } }

.status-section { padding: 40rpx; text-align: center; background-color: #fff; }
.status-section.pending { background: linear-gradient(135deg, #ff9500 0%, #ffb800 100%); }
.status-section.ongoing { background: linear-gradient(135deg, #34c759 0%, #30d158 100%); }
.status-section.completed { background: linear-gradient(135deg, #6e6e73 0%, #86868b 100%); }
.status-text { font-size: 36rpx; font-weight: 600; color: #fff; }

.card { margin: 24rpx; padding: 24rpx; background-color: #fff; border-radius: 24rpx; }
.card-title { font-size: 30rpx; font-weight: 600; color: #1d1d1f; margin-bottom: 20rpx; padding-bottom: 16rpx; border-bottom: 1rpx solid rgba(0,0,0,0.06); }
.info-row { display: flex; justify-content: space-between; margin-bottom: 16rpx; }
.info-row:last-child { margin-bottom: 0; }
.info-label { font-size: 28rpx; color: #6e6e73; }
.info-value { font-size: 28rpx; color: #1d1d1f; text-align: right; }
.info-value.address { display: flex; flex-direction: column; align-items: flex-end; }
.address-detail { font-size: 24rpx; color: #86868b; margin-top: 4rpx; }

.student-item { padding: 12rpx 0; font-size: 28rpx; color: #1d1d1f; }

.price-row { display: flex; justify-content: space-between; font-size: 28rpx; margin-bottom: 12rpx; }
.price-row:last-child { margin-bottom: 0; }
.price-row.total { padding-top: 16rpx; border-top: 1rpx solid rgba(0,0,0,0.06); }
.discount { color: #ff3b30; }
.pay-amount { font-size: 36rpx; font-weight: 600; color: #ff3b30; }

.action-section { padding: 24rpx; display: flex; flex-wrap: wrap; gap: 16rpx; }
.action-btn { flex: 1; min-width: 200rpx; height: 80rpx; line-height: 80rpx; font-size: 28rpx; border-radius: 40rpx; border: none; }
.action-btn::after { border: none; }
.action-btn.outline { background-color: #f5f5f7; color: #1d1d1f; }
