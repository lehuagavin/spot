/* 加入拼班页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #07C160;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 课程卡片 */
.course-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  border: 2rpx solid #07C160;
  margin-bottom: 24rpx;
}

.course-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-tag {
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  color: #07C160;
  background-color: transparent;
  border-radius: 4rpx;
}

.status-tag.ongoing {
  color: #07C160;
}

.course-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.week-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.slots-text {
  font-size: 24rpx;
  color: #999;
}

.course-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.course-info-row:last-child {
  margin-bottom: 0;
}

.info-icon-wrapper {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.info-icon-text {
  font-size: 22rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666;
}

/* 课程名称标题 */
.section-title-row {
  padding: 20rpx 0;
}

.section-main-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

/* 选择学员区域 */
.student-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.select-student-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 28rpx;
}

.select-label {
  font-size: 28rpx;
  color: #999;
}

.arrow-icon {
  font-size: 40rpx;
  color: #ccc;
  font-weight: 300;
}

/* 已选学员列表 */
.selected-students {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 28rpx;
  margin-bottom: 24rpx;
}

.student-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-item:last-child {
  border-bottom: none;
}

.student-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.insurance-tag {
  font-size: 26rpx;
  color: #07C160;
}

.price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.price-type {
  display: flex;
  align-items: center;
}

.price-check {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.price-check.active {
  border-color: #07C160;
  background-color: #07C160;
}

.check-icon {
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
}

.price-type-label {
  font-size: 28rpx;
  color: #333;
}

.price-values {
  display: flex;
  align-items: center;
}

.price-original {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 16rpx;
}

.price-current {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: 600;
}

.discount-row {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.discount-text {
  font-size: 26rpx;
  color: #999;
  margin-right: 24rpx;
}

.discount-amount {
  color: #FF4D4F;
}

.subtotal-text {
  font-size: 26rpx;
  color: #333;
}

.subtotal-amount {
  color: #FF4D4F;
  font-weight: 500;
}

/* 总计区域 */
.total-section {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 24rpx 0;
}

.total-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 8rpx;
}

.total-amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #FF4D4F;
}

/* 温馨提示 */
.notice-section {
  padding: 20rpx 0;
  margin-bottom: 16rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

/* 协议区域 */
.agreement-section {
  padding: 24rpx 0;
}

.agreement-row {
  display: flex;
  align-items: center;
  justify-content: center;
}

.agreement-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.agreement-checkbox.checked {
  border-color: #07C160;
}

.checkbox-inner {
  width: 20rpx;
  height: 20rpx;
  background-color: #07C160;
  border-radius: 50%;
}

.agreement-text {
  font-size: 28rpx;
  color: #666;
}

.agreement-link {
  font-size: 28rpx;
  color: #1989FA;
}

/* 底部占位 */
.bottom-placeholder {
  height: 60rpx;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #fff;
}

.pay-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
  background-color: #07C160;
  border-radius: 48rpx;
  border: none;
}

.pay-btn::after {
  border: none;
}

.pay-btn.disabled {
  background-color: #ccc;
}
