/* 确认订单页面样式 */
.page-container { min-height: 100vh; background-color: #f5f5f7; padding-bottom: 160rpx; }
.loading-state { display: flex; justify-content: center; padding: 200rpx; }
.loading-spinner { width: 60rpx; height: 60rpx; border: 4rpx solid #e8e8ed; border-top-color: #0071e3; border-radius: 50%; animation: spin 0.8s linear infinite; }
@keyframes spin { to { transform: rotate(360deg); } }

.course-card { margin: 24rpx; padding: 28rpx; background-color: #fff; border-radius: 24rpx; }
.course-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx; }
.course-name { font-size: 34rpx; font-weight: 600; color: #1d1d1f; }
.status-tag { padding: 6rpx 16rpx; font-size: 24rpx; color: #0071e3; background-color: rgba(0,113,227,0.1); border-radius: 8rpx; }
.course-info { display: flex; align-items: center; font-size: 26rpx; color: #6e6e73; margin-bottom: 12rpx; }
.course-info.highlight { color: #0071e3; }
.course-info .icon { margin-right: 8rpx; }

.student-section { margin: 24rpx; background-color: #fff; border-radius: 24rpx; overflow: hidden; }
.section-header { display: flex; justify-content: space-between; padding: 28rpx; border-bottom: 1rpx solid rgba(0,0,0,0.06); }
.section-title { font-size: 30rpx; font-weight: 500; color: #1d1d1f; }
.section-action { font-size: 28rpx; color: #0071e3; }
.student-list { padding: 0 28rpx; }
.student-item { display: flex; align-items: center; padding: 20rpx 0; border-bottom: 1rpx solid rgba(0,0,0,0.06); }
.student-item:last-child { border-bottom: none; }
.student-info { flex: 1; display: flex; align-items: center; }
.student-name { font-size: 28rpx; color: #1d1d1f; margin-right: 12rpx; }
.new-tag { padding: 4rpx 8rpx; font-size: 20rpx; color: #ff3b30; background-color: rgba(255,59,48,0.1); border-radius: 4rpx; }
.student-price { margin-right: 16rpx; }
.price-original { font-size: 24rpx; color: #86868b; text-decoration: line-through; margin-right: 8rpx; }
.price-current { font-size: 28rpx; color: #ff3b30; font-weight: 500; }
.student-remove { font-size: 28rpx; color: #86868b; padding: 8rpx; }

.price-section { margin: 24rpx; padding: 24rpx 28rpx; background-color: #fff; border-radius: 24rpx; }
.price-row { display: flex; justify-content: space-between; margin-bottom: 16rpx; }
.price-row:last-child { margin-bottom: 0; }
.price-row.total { padding-top: 16rpx; border-top: 1rpx solid rgba(0,0,0,0.06); }
.price-label { font-size: 28rpx; color: #6e6e73; }
.price-value { font-size: 28rpx; color: #1d1d1f; }
.price-value.discount { color: #ff3b30; }
.price-row.total .price-value { font-size: 36rpx; font-weight: 600; color: #ff3b30; }

.notice-section { margin: 24rpx; padding: 24rpx; background-color: rgba(255,149,0,0.1); border-radius: 16rpx; }
.notice-title { display: block; font-size: 26rpx; font-weight: 500; color: #ff9500; margin-bottom: 8rpx; }
.notice-text { font-size: 24rpx; color: #6e6e73; line-height: 1.6; }

.agreement-section { padding: 24rpx 32rpx; }
.agreement-label { display: flex; align-items: center; font-size: 26rpx; color: #6e6e73; }
.agreement-label checkbox { margin-right: 12rpx; }
.agreement-link { color: #0071e3; }

.bottom-placeholder { height: 40rpx; }
.bottom-bar { position: fixed; left: 0; right: 0; bottom: 0; display: flex; align-items: center; padding: 16rpx 24rpx; padding-bottom: calc(16rpx + env(safe-area-inset-bottom)); background-color: #fff; box-shadow: 0 -2rpx 16rpx rgba(0,0,0,0.06); }
.bar-price { flex: 1; }
.bar-label { font-size: 26rpx; color: #6e6e73; }
.bar-amount { font-size: 40rpx; font-weight: 600; color: #ff3b30; margin-left: 8rpx; }
.pay-btn { width: 280rpx; height: 88rpx; line-height: 88rpx; font-size: 32rpx; font-weight: 500; color: #fff; background-color: #0071e3; border-radius: 44rpx; border: none; }
.pay-btn::after { border: none; }
.pay-btn.disabled { background-color: #c7c7cc; }
