/* 确认支付页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 180rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #07C160;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 状态提示区域 */
.status-section {
  background: linear-gradient(135deg, #07C160 0%, #10B981 100%);
  padding: 32rpx 24rpx;
  color: #fff;
}

.status-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.countdown-text {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 课程卡片 */
.course-card {
  background-color: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  border: 2rpx solid #07C160;
}

.course-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-tag {
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  color: #07C160;
  background-color: transparent;
  border-radius: 4rpx;
}

.status-tag.ongoing {
  color: #07C160;
}

.course-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.week-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.slots-text {
  font-size: 24rpx;
  color: #999;
}

.course-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.course-info-row:last-child {
  margin-bottom: 0;
}

.info-icon-wrapper {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.info-icon-text {
  font-size: 22rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666;
}

/* 价格标题 */
.price-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  margin: 0 24rpx;
  border-radius: 16rpx 16rpx 0 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.unit-price {
  font-size: 28rpx;
  color: #999;
}

/* 学员列表 */
.students-section {
  background-color: #fff;
  margin: 0 24rpx;
  padding: 0 24rpx;
  border-radius: 0 0 16rpx 16rpx;
}

.student-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-item:last-child {
  border-bottom: none;
}

.student-header {
  margin-bottom: 16rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.price-type {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: 600;
}

.discount-row {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.discount-text {
  font-size: 26rpx;
  color: #999;
  margin-right: 24rpx;
}

.discount-amount {
  color: #FF4D4F;
}

.subtotal-text {
  font-size: 26rpx;
  color: #333;
}

.subtotal-amount {
  color: #FF4D4F;
  font-weight: 500;
}

/* 总计区域 */
.total-section {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 24rpx;
  margin: 0 24rpx;
}

.total-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 8rpx;
}

.total-amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #FF4D4F;
}

/* 温馨提示 */
.notice-section {
  margin: 24rpx;
  padding: 20rpx;
}

.notice-content {
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}

/* 底部占位 */
.bottom-placeholder {
  height: 60rpx;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0,0,0,0.06);
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 44rpx;
  border: none;
}

.cancel-btn::after {
  border: none;
}

.pay-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  background-color: #07C160;
  border-radius: 44rpx;
  border: none;
}

.pay-btn::after {
  border: none;
}

/* 支付弹窗遮罩 */
.pay-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

/* 支付弹窗 */
.pay-modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  z-index: 101;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.pay-modal.show {
  opacity: 1;
  visibility: visible;
  transform: translate(-50%, -50%) scale(1);
}

.modal-header {
  display: flex;
  justify-content: flex-end;
  padding: 24rpx 24rpx 0;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 40rpx 60rpx;
}

.pay-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.pay-icon-text {
  font-size: 60rpx;
  color: #07C160;
}

.pay-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 48rpx;
}

.pay-option-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
  margin-bottom: 24rpx;
}

.pay-option-btn::after {
  border: none;
}

.pay-option-btn.primary {
  background-color: #07C160;
  color: #fff;
}

.pay-option-link {
  font-size: 28rpx;
  color: #1989FA;
  padding: 16rpx 0;
}
