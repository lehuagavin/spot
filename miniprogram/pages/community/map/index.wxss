/* 地图选择小区页面样式 */
.page-container {
  width: 100%;
  height: 100vh;
  position: relative;
}

/* ========== 搜索栏 ========== */
.search-bar {
  position: absolute;
  top: 20rpx;
  left: 24rpx;
  right: 24rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}

.search-placeholder {
  font-size: 28rpx;
  color: #86868b;
}

/* ========== 地图 ========== */
.map {
  width: 100%;
  height: 100%;
}

/* 定位按钮 */
.location-btn {
  position: absolute;
  right: 24rpx;
  bottom: 300rpx;
  width: 88rpx;
  height: 88rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.location-btn .btn-icon {
  font-size: 40rpx;
}

/* 列表按钮 */
.list-btn {
  position: absolute;
  right: 24rpx;
  bottom: 400rpx;
  width: 88rpx;
  height: 88rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.list-btn .btn-icon {
  font-size: 32rpx;
}

.list-btn .btn-text {
  font-size: 20rpx;
  color: #6e6e73;
  margin-top: 4rpx;
}

/* ========== 小区信息面板 ========== */
.community-panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.community-panel.show {
  transform: translateY(0);
}

.panel-content {
  padding: 32rpx;
}

.community-info {
  margin-bottom: 24rpx;
}

.community-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.community-address {
  font-size: 28rpx;
  color: #6e6e73;
  margin-bottom: 8rpx;
}

.community-distance {
  font-size: 26rpx;
  color: #0071e3;
}

.select-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  background-color: #0071e3;
  border-radius: 48rpx;
  border: none;
}

.select-btn::after {
  border: none;
}

/* ========== 搜索弹窗 ========== */
.search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  z-index: 100;
  transform: translateY(-100%);
  transition: transform 0.3s ease;
}

.search-modal.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  padding-top: calc(20rpx + constant(safe-area-inset-top));
  padding-top: calc(20rpx + env(safe-area-inset-top));
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.modal-search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 20rpx;
  background-color: #f5f5f7;
  border-radius: 36rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1d1d1f;
}

.cancel-btn {
  font-size: 28rpx;
  color: #0071e3;
}

.search-results {
  padding: 20rpx 0;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.result-item:active {
  background-color: #fafafa;
}

.result-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.result-content {
  flex: 1;
}

.result-name {
  font-size: 30rpx;
  color: #1d1d1f;
  margin-bottom: 4rpx;
}

.result-address {
  font-size: 26rpx;
  color: #6e6e73;
}

.empty-results {
  text-align: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #86868b;
}
