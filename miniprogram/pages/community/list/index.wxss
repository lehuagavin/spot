/* 小区列表页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f7;
}

/* ========== 搜索栏 ========== */
.search-section {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #ffffff;
  gap: 20rpx;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 20rpx;
  background-color: #f5f5f7;
  border-radius: 36rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1d1d1f;
}

.search-placeholder {
  color: #86868b;
}

.search-clear {
  padding: 8rpx;
  font-size: 24rpx;
  color: #86868b;
}

.map-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 16rpx;
}

.map-icon {
  font-size: 36rpx;
}

.map-text {
  font-size: 20rpx;
  color: #6e6e73;
  margin-top: 4rpx;
}

/* ========== 搜索历史 ========== */
.history-section {
  padding: 24rpx;
  background-color: #ffffff;
  margin-bottom: 16rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.section-action {
  font-size: 26rpx;
  color: #0071e3;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #6e6e73;
  background-color: #f5f5f7;
  border-radius: 24rpx;
}

.history-tag:active {
  background-color: #e8e8ed;
}

/* ========== 定位提示 ========== */
.location-tip {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: rgba(0, 113, 227, 0.05);
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #6e6e73;
}

.tip-action {
  font-size: 26rpx;
  color: #0071e3;
}

/* ========== 小区列表 ========== */
.community-section {
  background-color: #ffffff;
}

.community-list {
}

.community-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: background-color 0.2s ease;
}

.community-item:last-child {
  border-bottom: none;
}

.community-item:active {
  background-color: #fafafa;
}

.community-item.selected {
  background-color: rgba(0, 113, 227, 0.05);
}

/* 图片 */
.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-image image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: linear-gradient(135deg, #f5f5f7 0%, #e8e8ed 100%);
}

/* 内容 */
.item-content {
  flex: 1;
  min-width: 0;
}

.item-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.item-address {
  font-size: 26rpx;
  color: #6e6e73;
}

/* 距离 */
.item-distance {
  display: flex;
  align-items: baseline;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.distance-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #0071e3;
}

.distance-unit {
  font-size: 24rpx;
  color: #0071e3;
  margin-left: 4rpx;
}

/* 选中标记 */
.item-check {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background-color: #0071e3;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.check-icon {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #0071e3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
  margin-top: 20rpx;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 12rpx;
}
