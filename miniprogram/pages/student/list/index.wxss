/* 学员列表页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding: 24rpx;
  padding-bottom: 160rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #4cd964;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
  margin-top: 20rpx;
}

/* 学员列表 */
.student-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.student-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 头像 */
.student-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 48rpx;
}

/* 信息 */
.student-info {
  flex: 1;
  min-width: 0;
}

.info-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.student-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-right: 12rpx;
}

.member-tag {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #6e6e73;
  background-color: #f5f5f7;
  border-radius: 6rpx;
}

.member-tag.vip {
  color: #ff9500;
  background-color: rgba(255, 149, 0, 0.1);
}

.info-row {
  display: flex;
  align-items: center;
}

.info-value {
  font-size: 26rpx;
  color: #86868b;
}

/* 删除按钮 */
.delete-btn {
  padding: 12rpx 20rpx;
  margin-left: 12rpx;
}

.delete-text {
  font-size: 28rpx;
  color: #ff3b30;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 12rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  background-color: #4cd964;
  background-image: linear-gradient(135deg, #5dd879 0%, #4cd964 100%);
  border-radius: 48rpx;
  border: none;
}

.add-btn::after {
  border: none;
}

.add-icon {
  font-size: 40rpx;
  color: #ffffff;
  margin-right: 8rpx;
  font-weight: 300;
}

.add-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #ffffff;
}
