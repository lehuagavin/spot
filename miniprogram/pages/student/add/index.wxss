/* 新增/编辑学员页面样式 - 优化版 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 表单卡片 */
.form-card {
  background-color: #ffffff;
}

/* 表单行 */
.form-row {
  border-bottom: 1rpx solid #f0f0f0;
}

.form-row.no-border {
  border-bottom: none;
}

.form-row-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  min-height: 100rpx;
}

/* 表单标签 */
.form-label {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
  flex-shrink: 0;
}

.form-label .required {
  color: #e74c3c;
  margin-right: 4rpx;
  font-size: 30rpx;
}

/* 表单值区域 */
.form-value-wrapper {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
  margin-left: 20rpx;
}

.form-value {
  font-size: 30rpx;
  color: #333333;
  text-align: right;
}

.form-value.placeholder {
  color: #999999;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  text-align: right;
  height: 48rpx;
  line-height: 48rpx;
}

.form-input.placeholder {
  color: #999999;
}

.input-placeholder {
  color: #999999;
}

/* 箭头 */
.form-arrow {
  font-size: 32rpx;
  color: #cccccc;
  margin-left: 16rpx;
  font-weight: 300;
}

/* 提示文字 */
.notice-text {
  padding: 16rpx 32rpx 24rpx;
  font-size: 24rpx;
  color: #e74c3c;
  line-height: 1.6;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 照片行 */
.photo-row .form-row-inner {
  padding: 24rpx 32rpx;
}

/* 圆形照片 */
.photo-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.photo-circle.photo-empty {
  background-color: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-placeholder {
  font-size: 24rpx;
  color: #cccccc;
}

.photo-img {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #ff4444;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  line-height: 1;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 提交按钮 - 绿色圆角 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #ffffff;
  background-color: #4cd964;
  background-image: linear-gradient(135deg, #5dd879 0%, #4cd964 100%);
  border-radius: 48rpx;
  border: none;
}

.submit-btn::after {
  border: none;
}

.submit-btn.loading {
  opacity: 0.7;
}

.submit-btn[disabled] {
  background-color: #a8e6b5;
  background-image: none;
  color: rgba(255, 255, 255, 0.8);
}

/* 选择微信头像弹窗 */
.avatar-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.avatar-modal-content {
  width: 100%;
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.avatar-modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
  text-align: center;
  margin-bottom: 16rpx;
}

.avatar-modal-desc {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 40rpx;
}

.avatar-modal-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  background-color: #07c160;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

.avatar-modal-btn::after {
  border: none;
}

.avatar-modal-cancel {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666666;
  background-color: #f5f5f5;
  border-radius: 44rpx;
}
