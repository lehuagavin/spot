/* 选择学员页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 160rpx;
}

.tip-bar {
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  background-color: #fff;
  text-align: center;
}

.loading-state {
  display: flex;
  justify-content: center;
  padding: 100rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #4cd964;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 学员列表 */
.student-list {
  background-color: #fff;
  margin-top: 16rpx;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.06);
}

.student-item.selected {
  background-color: rgba(76,217,100,0.05);
}

/* 头像 */
.student-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 48rpx;
}

/* 学员信息 */
.student-info {
  flex: 1;
  min-width: 0;
}

.info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.student-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.member-tag {
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #86868b;
  background-color: #f0f0f0;
  border-radius: 6rpx;
}

.member-tag.vip {
  color: #ff9500;
  background-color: rgba(255,149,0,0.1);
}

.student-birthday {
  font-size: 26rpx;
  color: #86868b;
}

/* 删除按钮 */
.delete-btn {
  padding: 12rpx 20rpx;
  margin-right: 16rpx;
}

.delete-text {
  font-size: 28rpx;
  color: #ff3b30;
}

/* 选择框 */
.check-box {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #d2d2d7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.check-box.checked {
  background-color: #4cd964;
  border-color: #4cd964;
  color: #fff;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #86868b;
}

/* 底部按钮 */
.bottom-placeholder {
  height: 40rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  gap: 24rpx;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0,0,0,0.06);
}

.add-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #1d1d1f;
  background-color: #1d1d1f;
  color: #ffffff;
  border-radius: 48rpx;
  border: none;
}

.add-btn::after {
  border: none;
}

.confirm-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
  background-color: #4cd964;
  background-image: linear-gradient(135deg, #5dd879 0%, #4cd964 100%);
  border-radius: 48rpx;
  border: none;
}

.confirm-btn::after {
  border: none;
}
