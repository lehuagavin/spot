/* 选择学员页面样式 */
.page-container { min-height: 100vh; background-color: #f5f5f7; padding-bottom: 160rpx; }
.tip-bar { padding: 24rpx 32rpx; font-size: 28rpx; color: #6e6e73; background-color: #fff; }
.loading-state { display: flex; justify-content: center; padding: 100rpx; }
.loading-spinner { width: 48rpx; height: 48rpx; border: 4rpx solid #e8e8ed; border-top-color: #0071e3; border-radius: 50%; animation: spin 0.8s linear infinite; }
@keyframes spin { to { transform: rotate(360deg); } }

.student-list { background-color: #fff; margin-top: 16rpx; }
.student-item { display: flex; align-items: center; padding: 24rpx 32rpx; border-bottom: 1rpx solid rgba(0,0,0,0.06); }
.student-item.selected { background-color: rgba(0,113,227,0.05); }
.student-avatar { width: 80rpx; height: 80rpx; border-radius: 50%; background-color: #f5f5f7; display: flex; align-items: center; justify-content: center; font-size: 36rpx; margin-right: 20rpx; }
.student-info { flex: 1; }
.student-name { font-size: 32rpx; font-weight: 500; color: #1d1d1f; }
.student-birthday { font-size: 26rpx; color: #86868b; margin-top: 4rpx; }
.new-tag { padding: 4rpx 12rpx; font-size: 22rpx; color: #ff3b30; background-color: rgba(255,59,48,0.1); border-radius: 6rpx; margin-right: 16rpx; }
.check-box { width: 44rpx; height: 44rpx; border: 2rpx solid #d2d2d7; border-radius: 50%; display: flex; align-items: center; justify-content: center; }
.check-box.checked { background-color: #0071e3; border-color: #0071e3; color: #fff; font-size: 24rpx; }

.empty-state { display: flex; flex-direction: column; align-items: center; padding: 120rpx; }
.empty-icon { font-size: 80rpx; margin-bottom: 16rpx; }
.empty-text { font-size: 28rpx; color: #86868b; }

.bottom-placeholder { height: 40rpx; }
.bottom-bar { position: fixed; left: 0; right: 0; bottom: 0; display: flex; gap: 16rpx; padding: 16rpx 24rpx; padding-bottom: calc(16rpx + env(safe-area-inset-bottom)); background-color: #fff; box-shadow: 0 -2rpx 16rpx rgba(0,0,0,0.06); }
.add-btn { flex: 1; height: 88rpx; line-height: 88rpx; font-size: 28rpx; color: #1d1d1f; background-color: #f5f5f7; border-radius: 44rpx; border: none; }
.add-btn::after { border: none; }
.confirm-btn { flex: 2; height: 88rpx; line-height: 88rpx; font-size: 28rpx; font-weight: 500; color: #fff; background-color: #0071e3; border-radius: 44rpx; border: none; }
.confirm-btn::after { border: none; }
