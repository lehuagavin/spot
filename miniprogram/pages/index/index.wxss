/* 首页样式 */
.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.banner {
  height: 300rpx;
  margin: 20rpx 0;
}

swiper {
  height: 100%;
}

.swiper-item {
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.course-list {
  margin-top: 20rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
