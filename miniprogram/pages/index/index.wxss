/* 首页样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 120rpx;
}

/* ========== 轮播图 ========== */
.banner-section {
  padding: 24rpx 24rpx 0;
}

.banner-swiper {
  height: 320rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.banner-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.banner-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* ========== 定位区域 ========== */
.location-section {
  display: flex;
  align-items: center;
  margin: 24rpx;
  padding: 24rpx 28rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.location-section:active {
  background-color: #fafafa;
}

.location-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.location-info {
  flex: 1;
  min-width: 0;
}

.location-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.location-hint {
  display: block;
  font-size: 24rpx;
  color: #86868b;
  margin-top: 4rpx;
}

.location-arrow {
  margin-left: 12rpx;
}

.arrow-icon {
  font-size: 40rpx;
  color: #c7c7cc;
}

/* ========== 筛选标签 ========== */
.filter-section {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #6e6e73;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.filter-tab.active {
  color: #ffffff;
  background-color: #0071e3;
  font-weight: 500;
}

/* ========== 课程列表 ========== */
.course-section {
  padding: 0 24rpx;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #0071e3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 36rpx;
  height: 36rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
  margin-top: 20rpx;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 12rpx;
}

/* ========== 加载更多 ========== */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
}

.load-more-text {
  font-size: 26rpx;
  color: #86868b;
  margin-left: 12rpx;
}

/* ========== 没有更多 ========== */
.no-more {
  text-align: center;
  padding: 32rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #c7c7cc;
}
