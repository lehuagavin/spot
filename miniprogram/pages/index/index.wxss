/* 首页样式 */
.page-container {
  min-height: 100vh;
  background-color: #f2f4f7;
  padding-bottom: 120rpx;
}

/* ========== 轮播图 ========== */
.banner-section {
  padding: 24rpx 24rpx 0;
}

.banner-swiper {
  height: 320rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.banner-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.banner-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* ========== 筛选区域 ========== */
.filter-section {
  padding: 24rpx 20rpx;
  margin-bottom: 16rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  margin: 0 20rpx 20rpx;
}

/* 标题行 */
.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-title {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.title-main {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.title-sub {
  font-size: 24rpx;
  color: #86868b;
}

/* 定位按钮 */
.location-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  background-color: #f5f5f7;
  border-radius: 32rpx;
}

.location-btn:active {
  background-color: #e8e8ed;
}

.location-btn .location-icon {
  font-size: 24rpx;
}

.location-btn .location-text {
  font-size: 24rpx;
  color: #1d1d1f;
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 20rpx;
}

.filter-tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 14rpx 36rpx;
  font-size: 26rpx;
  color: #1d1d1f;
  background-color: #f5f5f7;
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.filter-tab.active {
  color: #ffffff;
  background: linear-gradient(135deg, #7ed56f 0%, #28b485 100%);
  font-weight: 500;
}

/* ========== 课程列表 ========== */
.course-section {
  padding: 0 20rpx;
}

.course-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx 0;
}

.course-list course-card {
  width: calc(50% - 10rpx);
  box-sizing: border-box;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #0071e3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 36rpx;
  height: 36rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
  margin-top: 20rpx;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 12rpx;
}

/* ========== 加载更多 ========== */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
}

.load-more-text {
  font-size: 26rpx;
  color: #86868b;
  margin-left: 12rpx;
}

/* ========== 没有更多 ========== */
.no-more {
  text-align: center;
  padding: 32rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #c7c7cc;
}
