/* 课程详情页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 160rpx;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #0071e3;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
  margin-top: 20rpx;
}

/* ========== 品牌区 ========== */
.brand-section {
  background: linear-gradient(135deg, #0071e3 0%, #0077ed 100%);
  padding: 40rpx 32rpx;
}

.brand-logo {
  text-align: center;
  margin-bottom: 24rpx;
}

.logo-text {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
}

.logo-sub {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 8rpx;
  letter-spacing: 2rpx;
}

.brand-tags {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.brand-tag {
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  color: #ffffff;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

/* ========== 课程信息 ========== */
.course-section {
  background-color: #ffffff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
}

.course-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.course-title {
  flex: 1;
}

.age-tag {
  font-size: 28rpx;
  color: #0071e3;
}

.course-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-left: 8rpx;
}

.status-tag {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #86868b;
  background-color: #f5f5f7;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.status-tag.enrolling {
  color: #0071e3;
  background-color: rgba(0, 113, 227, 0.1);
}

/* 信息行 */
.info-row {
  display: flex;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #86868b;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #1d1d1f;
  display: flex;
  align-items: center;
}

.info-value.address {
  flex-direction: column;
  align-items: flex-start;
}

.address-detail {
  font-size: 24rpx;
  color: #6e6e73;
  margin-top: 4rpx;
}

.info-value.deadline {
  color: #ff9500;
}

/* 教练 */
.teacher-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f5f5f7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  overflow: hidden;
}

.teacher-avatar image {
  width: 100%;
  height: 100%;
}

.teacher-avatar text {
  font-size: 24rpx;
}

.teacher-name {
  font-size: 28rpx;
  color: #1d1d1f;
}

/* ========== 价格信息 ========== */
.price-section {
  background-color: #ffffff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
}

.price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.price-row:last-of-type {
  margin-bottom: 0;
}

.price-label {
  font-size: 28rpx;
  color: #6e6e73;
  display: flex;
  align-items: center;
}

.member-badge {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #ffd700 0%, #ffb800 100%);
  border-radius: 6rpx;
  margin-right: 12rpx;
}

.price-value {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #1d1d1f;
}

.price-amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.price-unit {
  font-size: 24rpx;
  color: #6e6e73;
  margin-left: 4rpx;
}

.member-price .price-symbol,
.member-price .price-amount {
  color: #ff3b30;
}

.saving-tip {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(255, 59, 48, 0.05);
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.saving-tip text:last-child {
  font-size: 26rpx;
  color: #ff3b30;
}

/* ========== 报名信息 ========== */
.enroll-section {
  background-color: #ffffff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
}

.enroll-header {
  margin-bottom: 24rpx;
}

.enroll-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.enroll-stats {
  display: flex;
  align-items: center;
}

.stats-item {
  font-size: 26rpx;
  color: #6e6e73;
}

.stats-item.highlight {
  color: #0071e3;
}

.stats-divider {
  margin: 0 16rpx;
  color: #d2d2d7;
}

/* 已报名学员 */
.enrolled-list {
  display: flex;
  align-items: center;
}

.enrolled-label {
  font-size: 26rpx;
  color: #6e6e73;
  margin-right: 16rpx;
}

.enrolled-avatars {
  display: flex;
  align-items: center;
}

.enrolled-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #f5f5f7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: -12rpx;
  border: 4rpx solid #ffffff;
  overflow: hidden;
}

.enrolled-avatar:first-child {
  margin-left: 0;
}

.enrolled-avatar image {
  width: 100%;
  height: 100%;
}

.enrolled-avatar text {
  font-size: 24rpx;
}

.enrolled-more {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #e8e8ed;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: -12rpx;
  border: 4rpx solid #ffffff;
  font-size: 22rpx;
  color: #6e6e73;
}

/* ========== 拼班说明 ========== */
.notice-section {
  background-color: #ffffff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
}

.notice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 20rpx;
}

.notice-list {
}

.notice-item {
  display: flex;
  margin-bottom: 16rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

.notice-num {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #f5f5f7;
  font-size: 22rpx;
  color: #6e6e73;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.notice-text {
  flex: 1;
  font-size: 26rpx;
  color: #6e6e73;
  line-height: 1.6;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* ========== 底部操作栏 ========== */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.bar-actions {
  display: flex;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  background: transparent;
  border: none;
  line-height: 1;
}

.action-btn::after {
  border: none;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 22rpx;
  color: #6e6e73;
}

.join-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  background-color: #0071e3;
  border-radius: 44rpx;
  border: none;
}

.join-btn::after {
  border: none;
}

.join-btn.disabled {
  background-color: #c7c7cc;
}
