/* 课程详情页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e8e8ed;
  border-top-color: #07C160;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
  margin-top: 20rpx;
}

/* ========== 课程头图 ========== */
.course-banner {
  position: relative;
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

/* 无图片时的默认背景 */
.course-banner.no-image {
  background: linear-gradient(135deg, #07C160 0%, #10B981 100%);
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-overlay {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 品牌 Logo */
.brand-logo {
  text-align: center;
}

.logo-text {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
}

.logo-sub {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 12rpx;
  letter-spacing: 2rpx;
}

/* ========== 标题区域 ========== */
.title-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 32rpx 32rpx 16rpx;
  background-color: #ffffff;
}

.title-left {
  flex: 1;
}

.course-name {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1d1d1f;
  line-height: 1.3;
}

.teacher-info {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-top: 12rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  border: none;
  font-size: 26rpx;
  color: #333333;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

/* ========== 周数标签 ========== */
.week-tag-section {
  padding: 0 32rpx 24rpx;
  background-color: #ffffff;
}

.week-tag {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #07C160 0%, #10B981 100%);
  border-radius: 12rpx;
}

.week-num {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.week-status {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
}

/* ========== 课程信息列表 ========== */
.info-section {
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.info-value.deadline {
  color: #666666;
}

/* 地址行 */
.address-row {
  flex-wrap: wrap;
  justify-content: space-between;
}

.address-left {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.address-text {
  word-break: break-all;
  line-height: 1.5;
}

.nav-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.nav-icon {
  font-size: 40rpx;
  color: #333333;
}

.nav-btn text:last-child {
  font-size: 24rpx;
  color: #666666;
  margin-top: 4rpx;
}

/* ========== 价格区域 ========== */
.price-section {
  margin-top: 24rpx;
  padding: 32rpx;
  background-color: #ffffff;
}

.price-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.price-label {
  font-size: 28rpx;
  color: #333333;
  margin-right: 24rpx;
}

.price-value {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: 500;
}

.price-amount {
  font-size: 56rpx;
  font-weight: 700;
  color: #FF4D4F;
}

.price-unit {
  font-size: 28rpx;
  color: #FF4D4F;
}

/* 会员权益卡 */
.member-card {
  background: linear-gradient(135deg, #2C2C2E 0%, #3A3A3C 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  position: relative;
  overflow: hidden;
}

.member-card::after {
  content: '';
  position: absolute;
  right: -40rpx;
  top: 20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.member-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.member-title {
  display: flex;
  align-items: center;
}

.member-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.member-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFD700;
}

.recommend-tag {
  padding: 6rpx 16rpx;
  background-color: #07C160;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #ffffff;
}

.member-price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.member-price-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-right: 16rpx;
}

.member-price-value {
  display: flex;
  align-items: baseline;
}

.member-price-num {
  font-size: 56rpx;
  font-weight: 700;
  color: #07C160;
}

.member-price-unit {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-left: 8rpx;
}

.member-saving {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.saving-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF4D4F;
  margin-left: 8rpx;
}

.saving-unit {
  font-size: 26rpx;
  color: #FF4D4F;
}

/* ========== 报名信息 ========== */
.enroll-section {
  margin-top: 24rpx;
  padding: 32rpx;
  background-color: #ffffff;
}

.enroll-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.enroll-class {
  font-size: 32rpx;
  font-weight: 600;
  color: #07C160;
  margin-right: 16rpx;
}

.enroll-time {
  font-size: 26rpx;
  color: #666666;
  flex: 1;
}

.enroll-status {
  font-size: 26rpx;
  color: #07C160;
}

.enroll-status.completed {
  color: #999999;
}

.enroll-progress {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
}

.remaining-count {
  font-size: 36rpx;
  font-weight: 600;
  color: #07C160;
  margin: 0 4rpx;
}

/* 已报名头像 */
.enrolled-avatars {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 24rpx;
}

.avatar-item {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
}

.avatar-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background-color: #e5e5e5;
  border-radius: 50%;
}

/* ========== 说明区域 ========== */
.notice-section {
  margin-top: 24rpx;
  padding: 32rpx;
  background-color: #ffffff;
}

.notice-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-bar {
  width: 6rpx;
  height: 32rpx;
  background-color: #07C160;
  border-radius: 3rpx;
  margin-right: 16rpx;
}

.notice-title text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.notice-content {
  padding-left: 22rpx;
}

.notice-subtitle {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

.notice-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 60rpx;
}

/* ========== 底部操作栏 ========== */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.join-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  background: linear-gradient(135deg, #07C160 0%, #10B981 100%);
  border-radius: 48rpx;
  border: none;
}

.join-btn::after {
  border: none;
}

.join-btn.disabled {
  background: #cccccc;
}
