/* 权益卡页面样式 */
.page-container { min-height: 100vh; background-color: #f5f5f7; padding-bottom: 40rpx; }
.loading-state { display: flex; justify-content: center; padding: 200rpx; }
.loading-spinner { width: 60rpx; height: 60rpx; border: 4rpx solid #e8e8ed; border-top-color: #0071e3; border-radius: 50%; animation: spin 0.8s linear infinite; }
@keyframes spin { to { transform: rotate(360deg); } }

.member-status { display: flex; align-items: center; padding: 32rpx; margin: 24rpx; background: linear-gradient(135deg, #e8e8ed 0%, #d2d2d7 100%); border-radius: 24rpx; }
.member-status.active { background: linear-gradient(135deg, #ffd700 0%, #ffb800 100%); }
.status-icon { font-size: 60rpx; margin-right: 20rpx; }
.status-content { flex: 1; }
.status-title { font-size: 32rpx; font-weight: 600; color: #1d1d1f; }
.status-desc { font-size: 26rpx; color: #6e6e73; margin-top: 4rpx; }
.member-status.active .status-desc { color: #333; }

.card-list { padding: 0 24rpx; }
.card-item { position: relative; background-color: #fff; border-radius: 24rpx; padding: 32rpx; margin-bottom: 24rpx; overflow: hidden; }
.card-item.recommended { border: 2rpx solid #0071e3; }
.recommend-tag { position: absolute; top: 0; right: 0; padding: 8rpx 24rpx; font-size: 22rpx; color: #fff; background-color: #0071e3; border-radius: 0 24rpx 0 16rpx; }

.card-header { margin-bottom: 24rpx; }
.card-name { font-size: 32rpx; font-weight: 600; color: #1d1d1f; }
.card-price { margin-top: 12rpx; }
.price-amount { font-size: 56rpx; font-weight: 700; color: #ff3b30; }
.price-unit { font-size: 28rpx; color: #ff3b30; }
.price-original { font-size: 26rpx; color: #86868b; text-decoration: line-through; margin-left: 16rpx; }

.card-benefits { margin-bottom: 24rpx; }
.benefit-item { display: flex; align-items: center; margin-bottom: 12rpx; }
.benefit-icon { color: #34c759; font-size: 28rpx; margin-right: 12rpx; font-weight: bold; }
.benefit-text { font-size: 28rpx; color: #1d1d1f; }

.purchase-btn { width: 100%; height: 88rpx; line-height: 88rpx; font-size: 32rpx; font-weight: 500; color: #fff; background-color: #0071e3; border-radius: 44rpx; border: none; }
.purchase-btn::after { border: none; }

.rights-section { margin: 24rpx; padding: 24rpx; background-color: #fff; border-radius: 24rpx; }
.section-title { font-size: 30rpx; font-weight: 600; color: #1d1d1f; margin-bottom: 16rpx; }
.rights-content { font-size: 26rpx; color: #6e6e73; line-height: 1.8; }
.rights-content .mt { display: block; margin-top: 12rpx; }
