/* 关于我们页面样式 */
.page-container { min-height: 100vh; background-color: #f5f5f7; }

.logo-section { display: flex; flex-direction: column; align-items: center; padding: 80rpx 0 60rpx; background-color: #fff; }
.logo { font-size: 100rpx; margin-bottom: 24rpx; }
.brand-name { font-size: 40rpx; font-weight: 600; color: #1d1d1f; }
.brand-sub { font-size: 22rpx; color: #86868b; margin-top: 8rpx; letter-spacing: 2rpx; }
.version { font-size: 24rpx; color: #86868b; margin-top: 16rpx; }

.info-section { padding: 24rpx; }
.info-card { background-color: #fff; border-radius: 24rpx; padding: 28rpx; margin-bottom: 24rpx; }
.card-title { font-size: 32rpx; font-weight: 600; color: #1d1d1f; margin-bottom: 20rpx; }
.card-content { font-size: 28rpx; color: #6e6e73; line-height: 1.8; }

.advantage-list { }
.advantage-item { display: flex; align-items: center; margin-bottom: 16rpx; }
.advantage-item:last-child { margin-bottom: 0; }
.advantage-icon { font-size: 32rpx; margin-right: 16rpx; }
.advantage-item text:last-child { font-size: 28rpx; color: #1d1d1f; }

.contact-list { }
.contact-item { display: flex; justify-content: space-between; margin-bottom: 16rpx; }
.contact-item:last-child { margin-bottom: 0; }
.contact-label { font-size: 28rpx; color: #6e6e73; }
.contact-value { font-size: 28rpx; color: #1d1d1f; }

.copyright { text-align: center; padding: 40rpx 0; }
.copyright text { font-size: 24rpx; color: #86868b; }
