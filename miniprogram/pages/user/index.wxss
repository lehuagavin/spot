/* 个人中心样式 */
.container {
  padding: 20rpx;
}

.user-info {
  text-align: center;
  padding: 60rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 10rpx;
  color: white;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: white;
}

.name {
  display: block;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.login-btn {
  margin-top: 20rpx;
  background: white;
  color: #667eea;
}

.menu {
  margin-top: 20rpx;
  background: white;
  border-radius: 10rpx;
}

.menu-item {
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}
