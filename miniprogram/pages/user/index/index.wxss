/* 个人中心页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* ========== 顶部区域 ========== */
.header-section {
  background: linear-gradient(180deg, #90EE90 0%, #98FB98 50%, #f5f5f5 100%);
  padding: 48rpx 32rpx 32rpx;
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
}

.avatar.default {
  background-color: #e0e0e0;
}

.avatar text {
  font-size: 48rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

/* 头像按钮 */
.avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  margin-right: 24rpx;
  line-height: 1;
}

.avatar-btn::after {
  border: none;
}

.avatar-btn .avatar {
  margin-right: 0;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-edit-hint {
  font-size: 20rpx;
  color: #666666;
  margin-top: 8rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.user-phone {
  font-size: 26rpx;
  color: #666666;
  margin-top: 6rpx;
}

.user-desc {
  font-size: 26rpx;
  color: #666666;
  margin-top: 8rpx;
}

.arrow {
  font-size: 40rpx;
  color: #999999;
}

.invite-btn {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  color: #ffffff;
  background-color: #333333;
  border-radius: 32rpx;
  border: none;
  line-height: 1;
}

.invite-btn::after {
  border: none;
}

/* 资产卡片 */
.assets-row {
  display: flex;
  gap: 24rpx;
}

.asset-card {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.asset-left {
  display: flex;
  flex-direction: column;
}

.asset-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.asset-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-top: 8rpx;
}

.asset-icon {
  font-size: 56rpx;
}

.bean-icon {
  color: #90EE90;
}

.coupon-icon {
  color: #FFD700;
}

/* ========== 主理人入口 ========== */
.agent-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 24rpx 32rpx;
  padding: 28rpx 32rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.agent-left {
  display: flex;
  flex-direction: column;
}

.agent-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.agent-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.agent-btn {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  color: #ffffff;
  background-color: #333333;
  border-radius: 32rpx;
  border: none;
  line-height: 1;
}

.agent-btn::after {
  border: none;
}

/* ========== 功能菜单网格 ========== */
.menu-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 32rpx;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 26rpx;
  color: #333333;
}

/* 客服按钮特殊处理 */
.contact-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
  padding: 0;
  line-height: 1;
}

.contact-btn::after {
  border: none;
}

.contact-btn .menu-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.contact-btn .menu-text {
  font-size: 26rpx;
  color: #333333;
}

/* ========== 退出登录 ========== */
.logout-section {
  padding: 48rpx 32rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #ff3b30;
  background-color: #ffffff;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.logout-btn::after {
  border: none;
}
