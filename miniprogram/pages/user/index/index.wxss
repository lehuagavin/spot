/* 个人中心页面样式 */
.page-container { min-height: 100vh; background-color: #f5f5f7; padding-bottom: 40rpx; }

.user-section { background-color: #fff; padding: 32rpx; margin-bottom: 24rpx; }
.user-card { display: flex; align-items: center; }
.avatar { width: 120rpx; height: 120rpx; border-radius: 50%; background-color: #f5f5f7; display: flex; align-items: center; justify-content: center; margin-right: 24rpx; overflow: hidden; }
.avatar.default { background: linear-gradient(135deg, #e8e8ed 0%, #d2d2d7 100%); }
.avatar text { font-size: 56rpx; }
.avatar image { width: 100%; height: 100%; }
.user-info { flex: 1; }
.login-text { font-size: 36rpx; font-weight: 600; color: #1d1d1f; }
.login-hint { font-size: 26rpx; color: #86868b; margin-top: 8rpx; }
.arrow { font-size: 40rpx; color: #c7c7cc; }
.username { font-size: 36rpx; font-weight: 600; color: #1d1d1f; }
.phone { font-size: 28rpx; color: #6e6e73; margin-top: 8rpx; }
.invite-btn { padding: 16rpx 32rpx; font-size: 26rpx; color: #0071e3; background-color: rgba(0,113,227,0.1); border-radius: 32rpx; border: none; line-height: 1; }
.invite-btn::after { border: none; }

.assets-row { display: flex; margin-top: 32rpx; padding-top: 24rpx; border-top: 1rpx solid rgba(0,0,0,0.06); }
.asset-item { flex: 1; text-align: center; }
.asset-value { font-size: 40rpx; font-weight: 600; color: #1d1d1f; }
.asset-label { font-size: 26rpx; color: #6e6e73; margin-top: 8rpx; }
.asset-divider { width: 1rpx; background-color: rgba(0,0,0,0.06); }

.menu-section { background-color: #fff; border-radius: 24rpx; margin: 0 24rpx 24rpx; overflow: hidden; }
.menu-item { display: flex; align-items: center; padding: 28rpx 24rpx; border-bottom: 1rpx solid rgba(0,0,0,0.06); }
.menu-item:last-child { border-bottom: none; }
.menu-item:active { background-color: #fafafa; }
.menu-item.info { background: linear-gradient(135deg, rgba(0,113,227,0.05) 0%, rgba(0,113,227,0.1) 100%); }
.menu-icon { font-size: 40rpx; margin-right: 20rpx; }
.menu-content { flex: 1; }
.menu-title { font-size: 30rpx; color: #1d1d1f; }
.menu-desc { font-size: 24rpx; color: #6e6e73; margin-top: 4rpx; }
.menu-arrow { font-size: 36rpx; color: #c7c7cc; }

.other-section { padding: 0 24rpx; margin-bottom: 24rpx; }
.service-btn { display: flex; align-items: center; justify-content: center; height: 88rpx; background-color: #fff; border-radius: 44rpx; font-size: 30rpx; color: #1d1d1f; border: none; }
.service-btn::after { border: none; }
.btn-icon { font-size: 36rpx; margin-right: 12rpx; }

.logout-section { padding: 0 24rpx; }
.logout-btn { height: 88rpx; line-height: 88rpx; font-size: 30rpx; color: #ff3b30; background-color: #fff; border-radius: 44rpx; border: none; }
.logout-btn::after { border: none; }
