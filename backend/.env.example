# 后端环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用配置
APP_NAME=spot
APP_ENV=development
DEBUG=true

# 数据库配置
DATABASE_URL=mysql+asyncmy://root:your_password@127.0.0.1:3306/spot

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production

# CORS 配置
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# 日志配置
LOG_LEVEL=INFO

# 微信小程序配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 微信支付配置（可选）
WECHAT_MCH_ID=your-merchant-id
WECHAT_API_KEY=your-wechat-pay-api-key

# 火山引擎 AI 图片生成配置
VOLCANO_API_KEY=your-volcano-api-key
VOLCANO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
VOLCANO_MODEL_ID=doubao-seedream-4-5-251128

# 硅基流动 AI 描述生成配置
SILICONFLOW_API_KEY=your-siliconflow-api-key
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
SILICONFLOW_MODEL=Qwen/Qwen2.5-7B-Instruct
SILICONFLOW_TIMEOUT=30
